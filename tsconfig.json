{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@server/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["**/node_modules"],
  "watchOptions": {
    "excludeDirectories": ["**/node_modules"]
  }
}
